<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRKZLBb4AI5orKq1dhCp1ho7G8J4stcM1J3/wvC1U" 
    crossorigin="anonymous"
  >
  <style>
    body {
      background-color: #f9f9f9;
      font-family: 'Georgia', serif;
      line-height: 1.6;
    }

    .blog-row {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      padding: 1.5rem 0;
      border-bottom: 1px solid #e6e6e6;
      cursor: pointer;
      text-decoration: none;
      color: inherit;
      transition: background-color 0.2s;
    }

    .blog-row:hover {
      background-color: #f1f1f1;
    }

    .blog-row:last-child {
      border-bottom: none;
    }

    .blog-image {
      flex: 1;
      max-width: 250px;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }

    .blog-content {
      flex: 2;
    }

    .blog-title {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
      .blog-row {
        flex-direction: column;
        text-align: center;
      }

      .blog-image {
        max-width: 100%;
        height: auto;
      }

      .blog-content {
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="container mt-4">
    <% blogs.forEach(blog => { %>
    <a href="blog/<%= blog._id %>" class="blog-row">
      <img src="<%= blog.coverImageURL %>" alt="Blog Cover" class="blog-image">
      <div class="blog-content">
        <h2 class="blog-title"><%= blog.title %></h2>
      </div>
    </a>
    <% }) %>
  </div>
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6IYZp+Ls0HaHo7G8zYdYdQ8PfuTyv7" 
    crossorigin="anonymous">
  </script>
  <%- include('./partials/scripts.ejs') %>
</body>
</html>
