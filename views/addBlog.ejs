<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRKZLBb4AI5orKq1dhCp1ho7G8J4stcM1J3/wvC1U" 
        crossorigin="anonymous"
    >
    <style>
        /* Container Style */
        .container {
          max-width: 800px;
          margin-top: 50px;
          padding: 2rem;
          background-color: white;
          border-radius: 10px;
          box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
          font-family: 'Arial', sans-serif; /* Consistent font family */
        }
      
        /* Label Style */
        .form-label {
          font-size: 1.2rem;  /* Consistent font size */
          font-weight: 600;
          color: #333;
        }
      
        /* Form Control Style */
        .form-control {
          border-radius: 10px;
          padding: 1rem;
          font-size: 1rem;
          border: 1px solid #ddd;
          transition: border-color 0.3s ease;
          font-family: 'Arial', sans-serif; /* Consistent font family */
        }
      
        .form-control:focus {
          border-color: #0077cc;
          box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
      
        /* Textarea Style */
        .textarea {
          width: 100%; /* Full width of the container */
          border-radius: 10px;
          padding: 1rem;
          font-size: 1rem;
          border: 1px solid #ddd;
          transition: border-color 0.3s ease;
          resize: vertical; /* Allow vertical resizing */
          min-height: 200px; /* Initial height */
          font-family: 'Arial', sans-serif; /* Consistent font family */
        }
      
        .textarea:focus {
          border-color: #0077cc;
          box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
      
        /* Button Style */
        .btn-primary {
          background-color: #0077cc;
          border-radius: 50px;
          padding: 0.75rem 1.5rem;
          font-size: 1.1rem;
          width: 100%;
          border: none;
          font-family: 'Arial', sans-serif; /* Consistent font family */
        }
      
        .btn-primary:hover {
          background-color: #005fa3;
        }
      
        /* Margin Style */
        .mb-3 {
          margin-bottom: 1.5rem;
        }
      
        /* Image Preview Style */
        #imagePreview {
          display: none;
          width: 100%;
          max-width: 400px;
          margin-top: 10px;
          border-radius: 8px;
        }
      
        /* Label Text Style */
        .form-text {
          font-size: 0.875rem;
          color: #6c757d;
        }
      
        /* General Font Family and Base Styling */
        body {
          font-family: 'Arial', sans-serif;
        }
      </style>
      
</head>

<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container">
      <h2>Create New Blog</h2>
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image</label>
          <input type="file" class="form-control-file" id="coverImage" name="coverImage" aria-describedby="coverImage">
        </div>

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
        </div>

        <div class="mb-3">
            <label for="body" class="form-label">Body</label>
            <textarea class="form-control textarea" placeholder="Write your Blog here." id="body" name="body"></textarea>
          </div>
          

        <div class="mb-3">
          <button class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>
